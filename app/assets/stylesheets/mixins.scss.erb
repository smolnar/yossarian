@import 'bootstrap/mixins';

// general

@mixin color-variant($default-color, $action-color) {
  color: $default-color;

  &:active, &:focus, &:hover {
    color: $action-color;
  }
}

@mixin background-fill($color) {
  background-color: $color;
  fill: $color;
}

@mixin background-variant($default-background, $action-background) {
  background: $default-background;

  &:active, &:focus, &:hover {
    background: $action-background;
  }
}

@mixin selection($background) {
  ::selection {
    background: $background;
    text-shadow: none;
  }

  ::-moz-selection {
    background: $background;
    text-shadow: none;
  }
}

@mixin text-line($height, $space: 0) {
  @include text-overflow;

  height: $height;
  line-height: $height;
  margin: 0 $space !important;
}
