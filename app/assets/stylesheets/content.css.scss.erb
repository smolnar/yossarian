// events

.events {
  .event {
    @extend .col-xs-12;
    @extend .col-sm-6;
    @extend .col-md-4;
    @extend .col-lg-3;
  }

  .info {
    position: absolute;
    top: 0px;
    width: 100%;
    height: $navbar-height;

    color: $gray-lightest;
    background: rgba($gray-darkest, $opacity-default);

    overflow: hidden;

    text-align: center;

    .title {
      @include text-line($navbar-height, 20px);
    }

    .venue {
      font-size: $font-size-h3;

      @include text-line(40px, 20px);
    }

    .date {
      color: $text-muted;

      font-size: $font-size-h4;

      @include text-line(25px, 20px);
    }

    .artists {
      @extend .row;

      .artist {
        @extend .col-xs-4;

        img {
          max-height: 160px;
        }

        padding: 20px 10px;

        &:first-child { padding-left:  20px }
        &:last-child  { padding-right: 20px }
      }
    }

    .btn {
      @include center-block;
      @include square(50px);

      padding: 0;
      border: none;
      border-radius: 25px;

      text-align: center;
      text-decoration: none !important;

      i {
        @include square(50px);

        display: block;
        padding-left: 4px;
        line-height: 50px !important;

        cursor: pointer !important;

        font-size: 25px;
      }
    }

    &.active {
      @include transition(all .4s);

      height: 100%;

      background: rgba($gray-darkest, $opacity-focus);
      text-align: center;
    }

    z-index: $zindex-navbar - 10;
  }

  .message {
    padding: $navbar-height 20px (2 * $navbar-height);

    text-align: center;
  }
}

.btn-paginate {
  @include clearfix;

  height: $navbar-height;
  margin: 0;
  padding: $navbar-padding-vertical $navbar-padding-horizontal;
  border: none;

  background: $gray-lightest;

  @include color-variant($link-color, $link-hover-color);

  text-align: center;
}
