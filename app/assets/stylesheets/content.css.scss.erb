// events

.events {
  .event {
    @extend .col-xs-12;
    @extend .col-sm-6;
    @extend .col-md-4;
    @extend .col-lg-3;
  }

  .info {
    position: absolute;
    top: 0px;
    width: 100%;
    height: $navbar-height;

    color: $gray-lightest;
    background: rgba($gray-darkest, .05);

    @include text-overflow;

    text-align: center;

    .title {
      margin: 14px 20px;
    }

    .venue {
      padding: 6px 20px 10px 20px;

      font-size: $font-size-h3;
    }

    .date {
      padding: 0 20px;

      color: $text-muted;
      font-size: $font-size-h4;
    }

    .artists {
      @extend .row;

      .artist {
        @extend .col-xs-4;

        img {
          max-height: 160px;
        }

        padding: 20px 10px;

        &:first-child { padding-left:  20px }
        &:last-child  { padding-right: 20px }
      }
    }

    button {
      @include center-block;
      @include square(50px);

      padding: 0;
      border: none;
      border-radius: 25px;

      text-align: center;

      i {
        @include square(50px);

        display: block;
        line-height: 50px !important;

        font-size: 20px;
      }
    }

    &.active {
      @include transition(all .4s);

      height: 100%;

      background: rgba($gray-darkest, .75);
    }

    z-index: $zindex-navbar - 10;
  }
}

.btn-paginate {
  @include clearfix;

  height: $navbar-height;
  margin: 0;
  padding: 10px;
  border: none;
  background: $gray-lightest;

  @include color-variant($link-color, $link-hover-color);
}
