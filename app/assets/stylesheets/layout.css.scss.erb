// general

html {
  @include selection(rgba($text-color, 0.25));

  height: 100%;
  overflow-y: scroll;
}

// header

header {
  @extend .jumbotron;

  margin: 0;
  height: auto;

  background-image: url(<%= asset_path 'background-2.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

  @media (min-width: $screen-lg-min) { padding: 150px 0 }
  @media (max-width: $screen-md-max) { padding: 150px 0 }
  @media (max-width: $screen-sm-max) { padding: 75px  0 }
  @media (max-width: $screen-xs-max) { padding: 75px  0 }

  text-align: center;

  &.video {
    padding: 0 !important;
    margin: 0;

    @media (min-width: $screen-lg-min) { height:  600px; }
    @media (max-width: $screen-md-max) { height:  500px; }
    @media (max-width: $screen-sm-max) { height:  400px; }
    @media (max-width: $screen-xs-max) { height:  300px; }
  }

  h1 {
    display: block;
    margin: 20px 0;
    padding: 20px;

    background: rgba($gray-darkest, .05);

    small {
      display: block;
      margin-top: 20px;

      color: $jumbotron-color;
    }
  }

  .buttons {
    margin: 0 0 20px 0;

    .btn {
      margin: 0 10px;
      padding: 1.25 * $padding-large-vertical 1.5 * $padding-large-horizontal;
      font-size: 1.25 * $jumbotron-font-size;
    }
  }
}

// footer

footer {
  @include clearfix;

  margin: 0;
  padding: $navbar-height 0;
  overflow-x: hidden;

  background: $gray-darker;
  color: $gray;
  text-align: center;

  a { @include color-variant($gray, $gray-light) }

  li a, li span {
    margin: 0 $padding-xs-horizontal;
  }

  li:after {
    content: 'Â·';
  }

  li:last-child:after {
    content: '';
  }

  hr {
    @include clearfix;

    margin: 30px 0 0 0;
    border: none;
  }
}
