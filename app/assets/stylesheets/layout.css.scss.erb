// general

html {
  @include selection(rgba($brand-primary, 0.25));

  height: 100%;
  overflow-y: scroll;
}

// links

a {
  text-decoration: none !important;
}

.active > a, a.active {
  text-decoration: underline !important;
}

// lists

.list-center {
  float: left;
  left: 50%;
  position: relative;

  text-align: center;

  > ul {
    @extend .list-unstyled;
    float: left;
    left: -50%;
    position: relative;

    margin: 0;

    & > li {
      float: left;
    }
  }
}

// text

.text-muted > a, a.text-muted {
  @include color-variant(darken($text-muted, 12.5%), darken($text-muted, 25%));
}

// navigation

.navbar {
  margin: 0;
  padding: 0 $navbar-padding-horizontal;
  border: none;

  &.affix {
    @extend .navbar-fixed-top;
  }

  .search {
    position: relative;
    display: inline-block;

    input {
      padding-left: 30px;
    }

    i {
      position: absolute;
      top: 10px;
      left: 10px;
      color: $gray-light;
    }
  }
}

.navbar-inverse {
  background: rgba($navbar-inverse-bg, .25);
}

.navbar-reverse {
  background: $gray-lighter;

  a {
    @include color-variant($link-color, $link-hover-color);
  }
}

.navbar-center {
  @include center-block;

  float: none;
  width: 3 * 48px;
}

.navbar-right {
  &:last-child {
    margin-right: 0;
  }
}

.navbar-brand {
  font-family: $font-family-brand;
  font-size: 25px;
}

.navbar-text {
  max-width: 50%;
  margin: $navbar-padding-vertical $navbar-padding-horizontal !important;

  direction: ltr;
  text-align: right;

  @include text-overflow;
}

// header

header {
  @extend .jumbotron;

  margin: 0;
  height: auto;

  background-image: url(<%= asset_path 'background-2.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

  @media (min-width: $screen-lg-min) { padding: 150px 0 }
  @media (max-width: $screen-md-max) { padding: 150px 0 }
  @media (max-width: $screen-sm-max) { padding: 75px  0 }
  @media (max-width: $screen-xs-max) { padding: 75px  0 }

  text-align: center;

  &.video {
    padding: 0 !important;
    margin: 0;

    @media (min-width: $screen-lg-min) { height:  600px; }
    @media (max-width: $screen-md-max) { height:  500px; }
    @media (max-width: $screen-sm-max) { height:  400px; }
    @media (max-width: $screen-xs-max) { height:  300px; }
  }

  h1 {
    display: block;
    margin: 20px 0;
    padding: 20px;

    background: rgba($jumbotron-bg, .05);

    small {
      display: block;
      margin-top: 20px;

      color: $jumbotron-color;
    }
  }

  .buttons {
    margin: 0 0 20px 0;

    .btn {
      margin: 0 10px;
      padding: 1.25 * $padding-large-vertical 1.5 * $padding-large-horizontal;
      font-size: 1.25 * $jumbotron-font-size;
    }
  }
}

// bricks

.bricks-accordion {
  .panel {
    margin-bottom: 0px;
    border: none;
  }
}

.bricks {
  .brick {
    @extend .col-xs-6;
    @extend .col-sm-4;
    @extend .col-md-3;
    @extend .col-lg-2;

    a {
      display: block;
      padding: $navbar-padding-vertical ($navbar-padding-horizontal + 15px);

      text-transform:capitalize;
    }
  }
}

// events

.events {
  .event {
    @extend .col-xs-12;
    @extend .col-sm-6;
    @extend .col-md-4;
    @extend .col-lg-3;
  }

  .info {
    position: absolute;
    top: 0px;
    width: 100%;
    height: $navbar-height;

    @include opacity(0.8);
    @include text-overflow;

    background-color: $gray-lighter;

    text-align: center;

    &.active {
      @include transition(all .3s);
      @include opacity(0.9);

      height: 100%;
    }

    img {
      height: 80px;
    }

    button {
      span {
        margin-left: $padding-xs-horizontal;
      }
    }

    z-index: $zindex-modal-background - 5;
  }
}

.btn-more {
  @include clearfix;
  @extend .btn-block;

  height: $navbar-height;
  margin: 0;
  padding: 0;
  border: none;

  background: $gray-lighter;

  @include color-variant($link-color, $link-hover-color);
}

// footer

footer {
  @include clearfix;

  margin: 0;
  padding: $navbar-height 0;
  overflow-x: hidden;

  background: $gray-lighter;
  color: $text-muted;
  text-align: center;

  a {
    @include color-variant($link-color, $link-hover-color);
  }

  li a, li span {
    margin: 0 $padding-xs-horizontal;
  }

  li:after {
    content: 'Â·';
  }

  li:last-child:after {
    content: '';
  }

  hr {
    @include clearfix;

    margin: 25px 0 0 0;
    border: none;
  }
}
