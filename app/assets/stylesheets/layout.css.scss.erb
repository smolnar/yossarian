// general

html {
  @include selection(rgba($brand-primary, 0.25));

  height: 100%;
  overflow-y: scroll;
}

// links

a {
  text-decoration: none !important;
}

.active > a, a.active {
  text-decoration: underline;
}

// text

.text-muted > a, a.text-muted {
  @include color-variant(darken($text-muted, 12.5%), darken($text-muted, 25%));
}

// navigation

.navbar {
  margin: 0;

  border-left: none;
  border-right: none;

  @media (max-width: $screen-xs-max) { padding: 0 15px }
}

.navbar-center {
  @include center-block;

  float: none;
  width: 3 * 48px;
}

.navbar-reverse {
  background: $gray-lighter;

  a {
    @include color-variant($link-color, $link-hover-color);
  }

  .input-group-addon {
    border-right: none;

    background: $input-bg;
    color: $gray-light;
  }
}

// bricks

.bricks {
  .brick {
    @extend .col-xs-6;
    @extend .col-sm-4;
    @extend .col-md-3;
    @extend .col-lg-2;

    a {
      display: block;

      padding: 15px;
      height: $navbar-height;
    }
  }
}

// header

header {
  @extend .jumbotron;

  margin: 0;
  height: auto;

  background-image: url(<%= asset_path 'background-1.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

  @media (min-width: $screen-lg-min) { padding: 100px 50px }
  @media (max-width: $screen-md-max) { padding: 100px 50px }
  @media (max-width: $screen-sm-max) { padding: 50px 25px }
  @media (max-width: $screen-xs-max) { padding: 50px 25px }

  text-align: center;

  h1 {
    display: inline-block;
    margin: 20px 0;
    padding: 20px;

    background: rgba($jumbotron-bg, .2);

    small {
      display: block;
      margin-top: 20px;

      color: $jumbotron-color;
    }
  }

  .buttons {
    margin: 0 0 20px 0;

    .btn {
      margin: 0 10px;
      padding: 1.25 * $padding-large-vertical 1.5 * $padding-large-horizontal;
      font-size: 1.25 * $jumbotron-font-size;
    }
  }
}

