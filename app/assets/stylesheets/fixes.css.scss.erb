// general

* {
  outline: none !important;
}

.btn, .dropdown-menu, .modal-content, .well,
button, input, select, textarea {
  box-shadow: none !important;
}

address, form, nav, p, dl, ol, ul, table {
  &:last-child {
    margin-bottom: 0;
  }
}

a {
  cursor: pointer !important;
}

// icons

.fa {
  font-size: $font-size-icon;

  cursor: default !important;
}

a .fa {
  cursor: pointer !important;
}

.fa-blank {
  display: none;
}

// links

a {
  text-decoration: none !important;
}

.active > a, a.active {
  text-decoration: underline !important;
}

// lists

.list-center {
  float: left;
  left: 50%;
  position: relative;

  text-align: center;

  > ul {
    @extend .list-unstyled;
    float: left;
    left: -50%;
    position: relative;

    margin: 0;

    & > li {
      float: left;
    }
  }
}

// modals

.modal-dialog {
  color: $text-color !important;
}

// slider

.nivoSlider img {
  display: none;
  position: absolute;
  top: 0px;
  left: 0px;
  height: 100% !important;
}

.nivo-caption {
  @include opacity(1);

  left: -20px;
  padding: 0;

  background: rgba($gray-darkest, $opacity-default);

  font-size: $font-size-h3;
  text-align: center;

  @include text-line($navbar-height, 20px);
}

// text

.text-muted > a, a.text-muted {
  @include color-variant(darken($text-muted, 12.5%), darken($text-muted, 25%));
}

// tooltips

.tooltip {
  font-size: $font-size-base;
}

// video

.video {
  position: relative;

  .mask {
    @include square(100%);

    position: absolute;
    top: 0;
    left: 0;

    background: transparent;
  }
}
