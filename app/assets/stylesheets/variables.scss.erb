@import 'bootstrap/variables';

// disable default icons

$icon-font-path: '/assets/';
$icon-font-name: 'fontawesome-webfont';

// fonts

$font-family-base: 'Open Sans Condensed', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$font-family-brand: Norican, $font-family-base;

$font-size-base: 18px;
$font-size-icon: 14px;

$line-height-base: 20 / 18;

$font-size-h1: ceil($font-size-base * 2.2);
$font-size-h2: ceil($font-size-base * 1.6);
$font-size-h3: ceil($font-size-base * 1.2);
$font-size-h4: $font-size-base;
$font-size-h5: $font-size-base;
$font-size-h6: $font-size-base;

// grid

$grid-columns:              12;
$grid-gutter-width:         0;
$grid-float-breakpoint:     0;
$grid-float-breakpoint-max: 0;
$grid-gutter-width:         0;

// navigation

$navbar-height:              60px;
$navbar-margin-bottom:       0;
$navbar-padding-horizontal:  20px;
$navbar-padding-vertical:    20px;
$navbar-collapse-max-height: 0;

// colors

$gray-darkest:  #000;
$gray-lightest: #fff;

$brand-primary: #428bca;
$brand-success: #5cb85c;
$brand-warning: #f0ad4e;
$brand-danger:  #d9534f;
$brand-info:    #5bc0de;

// links

$link-color:       $gray-dark;
$link-hover-color: $gray-darkest;

// opacities

$opacity-default:   .05;
$opacity-focus:     .75;
$opacity-selection: .25;

// navigation

$navbar-default-color:             $gray-dark;
$navbar-default-bg:                $gray-lightest;
$navbar-default-link-color:        $navbar-default-color;
$navbar-default-link-hover-color:  $gray-darkest;
$navbar-default-link-hover-bg:     transparent;
$navbar-default-brand-color:       $navbar-default-link-color;
$navbar-default-brand-hover-color: $navbar-default-link-hover-color;
$navbar-default-brand-hover-bg:    transparent;

$navbar-inverse-color:             $gray-light;
$navbar-inverse-bg:                rgba($gray-darkest, $opacity-default);
$navbar-inverse-link-color:        $navbar-inverse-color;
$navbar-inverse-link-hover-color:  $gray-lightest;
$navbar-inverse-link-hover-bg:     transparent;
$navbar-inverse-brand-color:       $navbar-inverse-link-color;
$navbar-inverse-brand-hover-color: $navbar-inverse-link-hover-color;
$navbar-inverse-brand-hover-bg:    transparent;

$navbar-inverse-affix-color:       $gray-lightest;
$navbar-inverse-affix-color-hover: $gray-lightest;
$navbar-inverse-affix-bg:          rgba($gray-darkest, $opacity-focus);

// inputs

$input-border-focus: $text-color;

// jumbotron

$jumbotron-bg:            #2b0f28;
$jumbotron-color:         $gray-lightest;
$jumbotron-heading-color: $gray-lightest;
$jumbotron-heading-bg:    rgba($gray-darkest, $opacity-default);
$jumbotron-font-size:     ceil($font-size-base * 1.25);

// tooltips

$tooltip-opacity: $opacity-focus;

// radiuses

$border-radius-base:  0;
$border-radius-large: 0;
$border-radius-small: 0;

$alert-border-radius:      $border-radius-base;
$badge-border-radius:      $border-radius-base;
$input-border-radius:      $border-radius-base;
$list-group-border-radius: $border-radius-base;
$nav-pills-border-radius:  $border-radius-base;
$navbar-border-radius:     $border-radius-base;
$pager-border-radius:      $border-radius-base;
$panel-border-radius:      $border-radius-base;
$thumbnail-border-radius:  $border-radius-base;

// states

$state-success-text: $brand-success;
$state-info-text:    $brand-info;
$state-warning-text: $brand-warning;
$state-danger-text:  $brand-danger;
