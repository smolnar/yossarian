@import 'bootstrap/variables';

// disable default icons

$icon-font-path: '/assets/';
$icon-font-name: 'fontawesome-webfont';

// fonts

$font-family-base: "Open Sans Condensed", "Helvetica Neue", Helvetica, Arial, sans-serif;
$font-family-brand: Norican, $font-family-base;

// grid

$grid-columns: 12;
$grid-gutter-width: 0;
$grid-float-breakpoint: 0;
$grid-float-breakpoint-max: 0;
$grid-gutter-width: 0;

// navbars

$navbar-height: 60px;
$navbar-margin-bottom: 0;
$navbar-padding-horizontal: 20px;
$navbar-padding-vertical: 20px;
$navbar-collapse-max-height: 0;

// colors

$brand-primary: #428bca;
$brand-success: #5cb85c;
$brand-warning: #f0ad4e;
$brand-danger:  #d9534f;
$brand-info:    #5bc0de;

// links

$link-color: $gray-light;
$link-hover-color: $text-color;

// inputs

$input-border-focus: $text-color;

// jumbotron

$jumbotron-bg: lighten(#081218, 2.5%);
$jumbotron-color: #fff;
$jumbotron-heading-color: #fff;
$jumbotron-font-size: ceil($font-size-base * 1.25);

// border radius

$border-radius-base:  0;
$border-radius-large: 0;
$border-radius-small: 0;

$alert-border-radius:      $border-radius-base;
$badge-border-radius:      $border-radius-base;
$input-border-radius:      $border-radius-base;
$list-group-border-radius: $border-radius-base;
$nav-pills-border-radius:  $border-radius-base;
$navbar-border-radius:     $border-radius-base;
$pager-border-radius:      $border-radius-base;
$panel-border-radius:      $border-radius-base;
$thumbnail-border-radius:  $border-radius-base;

// state text

$state-success-text: $brand-success;
$state-info-text:    $brand-info;
$state-warning-text: $brand-warning;
$state-danger-text:  $brand-danger;
